/* 容器 */
.takeaway {width: 100%;} 
/* 头部 */
.takeawayHead {width: 100%;height: 20%;display: flex;background: red;}
/* 头部logo */
.takeawayHead .shopLogo {width: 25%;height: 200rpx;}
.shopLogo .logo {width: 100%;height: 100%;}
/* 头部text */
.takeawayHead .shopText {width: 60%;height: 200rpx;align-items: stretch;padding-left: 5%; direction: left; behavior: scroll;}
/* 店名 */
.shopText .shopName {width: 100%;height: 40%;font-size: 45rpx;font-weight: bold;color: white;}
/* 通知图标or文本 */
.shopText .shopNotice{width: 100%;height: 35%;display: flex;}
.shopNotice .noticePic {float: left; width: 10%;height: 50rpx;}
.noticePic .pic {float: left;width: 100%;height: 100%;}
.shopNotice .noticeText {width: 200rpx;white-space: nowrap;color: white;font-size: 30rpx;line-height: 50rpx;position: absolute;}
/* 优惠 */
.takeawayHead .shopText .shopOffer {width: 100%;height: 15%;color: white;font-size: 25rpx;}
/* ----------------------------------------------------------------------------------------------- */
/* 顶部导航 */
.takeawayTopNav {display: flex;height: 80rpx;}
.topNavStyle{position: relative;flex: auto;text-align: center;line-height: 80rpx;}
.topNavStyle.active{color: red;}
.topNavStyle.active:after{content: "";display: block;position: absolute;bottom: 0;left: 0;right: 0;height: 6rpx;background: red;}
/* 新用户 */
.takeawayNew {width: 100%;height: 50rpx;display: flex;}
.takeawayNew .newPic {width: 50rpx;height: 50rpx;padding-right: 15rpx;}
.newPic .npic {width: 100%;height: 100%;}
.takeawayNew .newText {font-size: 30rpx;line-height: 50rpx;flex-grow: 2;}
.takeawayNew .dropPic {width: 50rpx;height: 50rpx;}
.dropPic .dpic {width: 100%;height: 100%;}
/* 左导航 */
.content-container {display: flex;height: 100%;width:100%;box-sizing: border-box;padding-bottom: 100rpx;overflow: scroll;position:absolute;}
.classify-container {width: 160rpx;background: #efefef;height: 100%;overflow: scroll;}
.classify-container .classify {height: 140rpx;border-bottom: 1px dashed #aaa;display: flex;justify-content: center;align-items: center;}
.classify-container .classify.active {background: #fff;}
.classify-container .classify .name {font-size: 30rpx;color: #646464;}
/* 菜单栏 */
.goods-container {flex: 1;background: #fff;height: 100%;overflow: scroll;}
.goods-container .title {padding: 20rpx 25rpx;color: #646464;font-size: 30rpx;line-height: 30rpx;background: #f7f7f7;}
.goods-container .goods {position: relative;padding: 20rpx 30rpx;font-size: 36rpx;line-height: 40rpx;border-bottom: 1px solid #f7f7f7;display: flex;}
.goods-container .goods .pic {width: 30%;height: 150rpx;margin-right: 20rpx;}
.menudetails {flex-direction: column;width: 45%}
.goods-container .goods .name {color: #000;font-size: 36rpx;line-height: 46rpx;font-weight: bold;}
.goods-container .goods .sold {color: #989898;font-size: 30rpx;line-height: 46rpx;}
.goods-container .goods .price {color: #f45044;font-size: 33rpx;line-height: 46rpx;font-weight: bold;}
.goods-container .goods .oldprice {color: #989898;text-decoration:line-through;font-size: 25rpx;}
