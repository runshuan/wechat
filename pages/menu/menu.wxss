/* 加减器 */
.cartcontrol-wrap{position: absolute;right: 30rpx;bottom: 10rpx;}
.addCart{font-size: 0;}
/* 删除 */
.cart-decrease{display:inline-block;opacity:1;transform:translate3d(0, 0, 0);width:50rpx;height:50rpx;background-repeat:no-repeat;background-size: contain;background-position:center;padding:0;float: left;}
.cart-add{width:25px;height:25px;display: inline-block;line-height: 24px;font-size: 24px;color: rgb(0, 160, 220);background-repeat:no-repeat;background-size: contain;background-position:center;}
.inner{display: inline-block;line-height: 48rpx;font-size: 48rpx;color: rgb(0, 160, 220);transition: all 0.4s linear;transform: rotate(0);}
.inner.move-enter-active, .inner.move-leave-active{transition: all 0.4s linear;}
.inner .move-enter, .inner.move-leave-active{opacity: 0;transform: translate3d(24px, 0, 0);}
.inner{transform: rotate(180deg);}
/* 数量 */
.cart-count{display:inline-block;vertical-align:top;width:60rpx;padding-top:2px;line-height:24px;text-align:center;color:rgb(147, 153, 159);font-size:17px;float: left;}


/*底部的购物车*/
.shopcart{position: fixed;left: 0;bottom: 0;z-index: 50;width: 100%;height: 48px;}
.shopcart .content{display: flex;background: #141d27;font-size: 0;color: rgba(255, 255, 255, 0.4);}
.shopcart .content .content-left{flex: 1}
.shopcart .logo-wrapper{display: inline-block;vertical-align: top;position: relative;top: -10px;margin: 0 12px;padding: 6px;width: 56px;height: 56px;box-sizing: border-box;border-radius: 50%;background: #141d27;}
.shopcart .logo{width: 100%;height: 100%;border-radius: 50%;text-align: center;background: #2b343c;background-size: 100% 100%;}
.shopcart .logo.highlight{background: rgb(0, 160, 220);}
.shopcart{line-height: 44px;font-size: 24px;color: #80858a;}
.shopcart.highlight{color: #fff;}
.shopcart .num{position: absolute;top: 0;right: 0;width: 24px;height: 16px;line-height: 16px;text-align: center;border-radius: 16px;font-size: 9px;font-weight: 700;color: #fff;background: rgb(240, 20, 20);box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);}
.shopcart .price{display: inline-block;vertical-align: top;margin-top: 12px;line-height: 24px;padding-right: 12px;box-sizing: border-box;font-size: 16px;font-weight: 700;}
.shopcart .price.highlight{color: #fff;}
.shopcart .content-right{flex: 0 0 105px;width: 105px;}
.content-right .pay{height: 48px;line-height: 48px;text-align: center;font-size: 12px;font-weight: 700;background: #2b333b;}
.content-right .pay.enough{background: #00b43c;color: #fff;}
/*点击购物车弹出来的购买物品的列表*/
.shopcart-list{position:absolute;left:0;bottom:49px;z-index:-1;width:100%;background: #fff;}
.food{border-bottom: 1px solid rgba(7, 17, 27, 0.1);}
.list-header{height: 40px;line-height: 40px;padding: 0 18px;background: #f3f5f7;border-bottom: 1px solid rgba(7, 17, 27, 0.1);}
.list-header .title{float: left;font-size: 14px;color: rgb(7, 17, 27);width: 100%;}
.list-header .title .title-line{border-left:3px solid #0085CF;margin:10px 0;height:20px;line-height:20px;padding-left:6px;}
.list-header .empty{float: right;font-size: 12px;color: #666;}
.list-content{padding: 0 18px;overflow: hidden;background: #fff;}
.list-content .food{position: relative;padding: 12px 0;}
.list-content .name{line-height: 24px;font-size: 14px;color: rgb(7, 17, 27);}
.list-content .price{position: absolute;right: 90px;bottom: 12px;line-height: 24px;font-size: 14px;font-weight: 700;color: #666;}
.list-content .cartcontrol-wrapper{position: absolute;right: 0;bottom: -10px;}
.content-right .pay.payClass{color: #fff;background: rgba(31,166,241,1);}
.cover{height: 100%;width: 100%;position: absolute;top: 0;left: 0;background: #000;opacity:0.5;}
/*抛物线动画*/
.good_box{
  width: 18px;
  height: 18px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: +99;
  background:rgba(0,133,207,1);
}