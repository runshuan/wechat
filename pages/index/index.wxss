/* 容器 */
.takeaway {width: 100%;} 
/* 头部 */
.takeawayHead {width: 100%;height: 20%;display: flex;background: red;padding: 0 3% 0 3%; }
/* 头部logo */
.takeawayHead .shopLogo {width: 25%;height: 200rpx;}
.shopLogo .logo {width: 100%;height: 100%;}
/* 头部text */
.takeawayHead .shopText {width: 60%;height: 200rpx;align-items: stretch;padding-left: 5%; direction: left; behavior: scroll;}
/* 店名 */
.shopText .shopName {width: 100%;height: 45%;font-size: 45rpx;font-weight: bold;color: white;}
/* 通知图标or文本 */
.shopText .shopNotice{width: 100%;height: 30%;display: flex;}
.shopNotice .noticePic {width: 10%;height: 50rpx;}
.noticePic .pic {width: 100%;height: 100%;}
.shopNotice .noticeText {width: 85%;white-space: nowrap;color: white;font-size: 35rpx;}
/* 优惠 */
.takeawayHead .shopText .shopOffer {width: 100%;height: 15%;color: white;font-size: 25rpx;}
/* ----------------------------------------------------------------------------------------------- */
/* 顶部导航 */
.takeawayTopNav {display: flex;height: 100rpx;}
.topNavStyle{position: relative;flex: auto;text-align: center;line-height: 100rpx;}
.topNavStyle.active{color: red;}
.topNavStyle.active:after{content: "";display: block;position: absolute;bottom: 0;left: 0;right: 0;height: 6rpx;background: red;}
/* 新用户 */
.takeawayNew {width: 100%;height: 50rpx;display: flex;}
.takeawayNew .newPic {width: 50rpx;height: 50rpx;padding-right: 15rpx;}
.newPic .npic {width: 100%;height: 100%;}
.takeawayNew .newText {font-size: 30rpx;line-height: 50rpx;flex-grow: 2;}
.takeawayNew .dropPic {width: 50rpx;height: 50rpx;}
.dropPic .dpic {width: 100%;height: 100%;}
/* 菜单 */
.menudetail {display: flex;width: 100%;}
/* 左导航 */
.content-container {display: flex;height: 100%;width:100%;box-sizing: border-box;padding-bottom: 100rpx;overflow: scroll;position:absolute;}
.classify-container {width: 160rpx;background: #efefef;height: 100%;overflow: scroll;}
.classify-container .classify {height: 180rpx;border-bottom: 1px dashed #aaa;display: flex;justify-content: center;align-items: center;}
.classify-container .classify.active {background: #fff;}
.classify-container .classify .name {font-size: 35rpx;color: #646464;}
/* 菜单栏 */
.goods-container {flex: 1;background: #fff;height: 100%;overflow: scroll;}
.goods-container .title {padding: 20rpx 25rpx;color: #646464;font-size: 30rpx;line-height: 30rpx;background: #f7f7f7;}
.goods-container .goods {position: relative;padding: 20rpx 30rpx;font-size: 36rpx;line-height: 40rpx;border-bottom: 1px solid #f7f7f7;}
.goods-container .goods .pic {float: left;width: 160rpx;height: 150rpx;margin-right: 20rpx;}
.goods-container .goods .name {color: #000;font-size: 36rpx;line-height: 46rpx;font-weight: bold;}
.goods-container .goods .sold {color: #989898;font-size: 30rpx;line-height: 46rpx;}
.goods-container .goods .price {color: #f45044;font-size: 33rpx;line-height: 46rpx;font-weight: bold;display: inline-block;}
.goods-container .goods .oldprice {color: #989898;text-decoration:line-through;font-size: 25rpx;display: inline-block;}
.goods-container .goods .addCart {position: absolute;right: 30rpx;bottom: 30rpx;width: 50rpx;height: 50rpx;border-radius: 50%;}
.goods-container .goods .addCart image {pointer-events: none;position: absolute;width: 50rpx;height: 50rpx;}
/* 评价 */
.evaluationBt {width: 100%;height: 65rpx;display: flex;}
.bt {width: 100%;height: 100%;margin-left: 3%;margin-right: 3%;font-size: 26rpx;color: #dfdfdf;border: 1rpx solid #dfdfdf;border-radius: 10rpx;background: white;}
.bt-hover {border: 1rpx solid red;}
/* 详情 */
.details {display: flex;font-size: 35rpx;border-bottom: 1rpx solid #dfdfdf;margin-top: 3%;padding: 0 3% 0 3%;}
.detailsName {width: 30%;padding-bottom: 3%;}
.detailsTxt {width: 68%;text-align:right;padding-bottom: 3%;}
/*  */
.cart-detail, .cart-detail .mask {position: absolute;left: 0;top: 0;width: 100%;height: 100%;}
.cart-detail .mask {background: rgba(0, 0, 0, 0.7);}
.cart-detail .list {position: absolute;left: 0;bottom: 100rpx;width: 100%;background: #f7f7f7;padding: 30rpx 0;}
.cart-detail .list .item {display: -webkit-flex;color: #333;font-size: 36rpx;line-height: 50rpx;padding: 20rpx 40rpx;}
.cart-detail .list .item .name {flex: 1;}
.cart-detail .list .item .total {width: 120rpx;}
.cart-detail .list .item .reduce, .cart-detail .list .item .add {font-size: 50rpx;width: 50rpx;height: 50rpx;text-align: center;border-radius: 50%;}
.cart-detail .list .item .num {width: 50rpx;text-align: center;margin: 0 5rpx;}
.cart {display: flex;position: fixed;left: 0;bottom: 0;width: 100%;height: 100rpx;background: #fff;}
.cart .data {flex: 1;}
.cart .data .icon {position: absolute;width: 100rpx;height: 100rpx;border-radius: 50%;left: 30rpx;}
.cart .data .icon image {position: absolute;width: 100rpx;height: 100rpx;}
.cart .data .icon .count {position: absolute;left: 70rpx;top: -10rpx;font-size: 30rpx;line-height: 40rpx;padding: 0 12rpx;color: #fff;background: #f45044;border-radius: 20rpx;}
.cart .data .total {color: #f45044;font-size: 36rpx;line-height: 100rpx;padding-left: 160rpx;}
.cart button {width: 200rpx;height: 100%;font-size: 30rpx;background: #f60;color: white;-webkit-appearance: none;border-radius: 0px;}
